#!/bin/sh -ex

DB_NAME=ushahidi
DB_USER=ushahidi
DB_PASS=$(mcookie)

ADMIN_NAME=admin
ADMIN_PASS=turnkey
ADMIN_MAIL=admin@example.com

SRC=/usr/local/src
WEBROOT=/var/www/ushahidi

# unpack and set permissions
unzip $SRC/ushahidi-*.zip -d $SRC
rm $SRC/ushahidi-*.zip
mv $SRC/ushahidi-* $WEBROOT
chown -R root:root $WEBROOT
chown -R www-data:www-data $WEBROOT/application/logs
chown -R www-data:www-data $WEBROOT/application/cache
chown -R www-data:www-data $WEBROOT/media/uploads
chown www-data:www-data $WEBROOT/application/config/config.php
chown www-data:www-data $WEBROOT/application/config/encryption.php
chown www-data:www-data $WEBROOT/application/config
chown www-data:www-data $WEBROOT/.htaccess

# configure apache
a2dissite default
a2ensite ushahidi
a2enmod rewrite

# start services
/etc/init.d/mysql start
/etc/init.d/apache2 start

# setup the database
MYSQL_BATCH="mysql --user=root --password=$MYSQL_PASS --batch"
MYSQL_ADMIN="mysqladmin --user=root --password=$MYSQL_PASS"

$MYSQL_ADMIN create $DB_NAME
$MYSQL_BATCH --execute "grant all privileges on $DB_NAME.* to $DB_USER@localhost identified by '$DB_PASS'; flush privileges;"

# curl based install
URL="http://127.0.0.1/installer/process.php"
CURL="curl -c /tmp/cookie -b /tmp/cookie"
EMAIL=$(echo $ADMIN_MAIL | sed s/@/%40/)

$CURL $URL --data "basic_perm_pre_check=Let%27s+get+started%21"
$CURL $URL --data "base_path=&db_name=$DB_NAME&username=$DB_USER&password=$DB_PASS&host=localhost&table_prefix=&connection=&permission=&load_db_tpl=&load_htaccess_file=&config_perm=&htaccess_perm=&basic_db_info=Continue+%E2%86%92"
$CURL $URL --data "table_prefix=&site_name=TurnKey+Ushahidi&site_tagline=Crowdsourcing+information&select_language=en_US&site_email=$EMAIL&enable_clean_url=1&basic_general_settings=Continue+%E2%86%92"
$CURL $URL --data "table_prefix=&admin_email=$EMAIL&admin_password=${ADMIN_PASS}123&admin_password_again=${ADMIN_PASS}123&basic_admin_pass=Continue+%E2%86%92"

rm -f /tmp/cookie

# tweak configuration (compression, security)
CONF=$WEBROOT/application/config/config.php
sed -i "s|output_compression'\].*|output_compression'\] = FALSE;|" $CONF
sed -i "s|site_protocol'\].*|site_protocol'\] = 'https';|" $CONF

CONF=$WEBROOT/application/config/cookie.php
sed -i "s|secure'\].*|secure'\] = TRUE;|" $CONF

# secure sensitive configuration files
chmod 640 $WEBROOT/application/config/config.php
chmod 640 $WEBROOT/application/config/encryption.php
chmod 640 $WEBROOT/application/config/database.php

# stop services
/etc/init.d/mysql stop
/etc/init.d/apache2 stop

